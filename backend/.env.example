# MongoDB Connection String
# Replace with your actual MongoDB Atlas connection string
MONGODB_URI="mongodb+srv://<user>:<password>@cluster0.mongodb.net/<dbname>?retryWrites=true&w=majority"

# JWT Secret Key
# Use a long, random, and secret string for production
JWT_SECRET="THIS_IS_A_SECRET_KEY_REPLACE_IT"

# Backend Port (Next.js default is 3000, but we use 3001 to avoid conflict with React)
PORT=3001

# The URL of the frontend application for CORS configuration
FRONTEND_URL="http://localhost:5173"